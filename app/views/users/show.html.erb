<%= render partial: "layouts/navbar" %>

<h2>Welcome Back <%= current_user.first_name %>!</h2>

<p>Email address: <%= current_user.email %></p>
<div id='profile_pic'>
 <h4> Your profile picture <br>
 <%= image_tag current_user.avatar.url if current_user.avatar? %></h4>
</div>

<div class="btn-toolbar">
<%= link_to "Edit", edit_user_path, class: "btn btn-primary" %>
<%= button_to "Delete", {:controller => "users", :action => 'destroy', :id => @user.id}, :confirm => "Are you sure you want to delete your account?", :method => :delete, class: "btn btn-primary" %>
</div>

    <% if signed_in? %>
      Signed in as: <%= current_user.email %>
      <%= button_to 'Sign out', sign_out_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign in', sign_in_path %>
    <% end %>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
